@model CreateGameViewModel

@using (Html.BeginForm("Edit", "Games", FormMethod.Post))
{
<div class="jumbotron">
    <h3 class="mb-3">Edytuj grę</h3>
    <div class="form-group">
        @Html.LabelFor(model => model.Game.Title)
        <div class="col-md">
            @Html.TextBoxFor(model => model.Game.Title, new { @style = "width:400px;" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Game.YearOfRelease)
        <div class="col-md">
            @Html.TextBoxFor(model => model.Game.YearOfRelease, new { @style = "width:400px;" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Game.ProducerId)
        <div class="col-md">
            @Html.DropDownListFor(x => Model.Game.ProducerId, new SelectList(Model.Producers, "Id", "Name"), new { @style = "width:400px;" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Game.GenreId)
        <div class="col-md">
            @Html.DropDownListFor(x => Model.Game.GenreId, new SelectList(Model.Genres, "Id", "GenreName"), new { @style = "width:400px;" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Game.ModeId)
        <div class="col-md">
            @Html.DropDownListFor(x => Model.Game.ModeId, new SelectList(Model.Modes, "Id", "ModeName"), new { @style = "width:400px;" })
        </div>
    </div>
    @Html.HiddenFor(m => m.Game.Id)
    <input type="submit" value="Edytuj" class="btn btn-primary" />
</div>
}