@model DetailsGameViewModel

@{
    ViewData["Title"] = "Szczegóły";
}
<div class="jumbotron">
    <h3 class="headline">Szczegóły gry</h3>
    <div class="form-group">
        @Html.LabelFor(model => model.Game.Title)
        <div class="col-md">
            @Html.DisplayFor(model => model.Game.Title, new { @style = "width:400px;" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Game.YearOfRelease)
        <div class="col-md">
            @Html.DisplayFor(model => model.Game.YearOfRelease, new { @style = "width:400px;" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Game.ProducerId)
        <div class="col-md">
            @Html.DisplayFor(name => Model.Game.Producer.Name, new { @style = "width:400px;" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Game.GenreId)
        <div class="col-md">
            @Html.DisplayFor(xname => Model.Game.Genre.GenreName, new { @style = "width:400px;" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Game.ModeId)
        <div class="col-md">
            @Html.DisplayFor(x => Model.Game.Mode.ModeName, new { @style = "width:400px;" })
        </div>
    </div>
    <a class="btn btn-dark fa fa-arrow-circle-left" asp-action="Index"> Wróć do listy gier</a>
</div>