@model Game


@using (Html.BeginForm("Delete", "Games", FormMethod.Post))
{
<div class="jumbotron">
    <h3 class="mb-3">Czy na pewno chcesz usunąć poniższy rekord?</h3>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.YearOfRelease)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.YearOfRelease)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Producer)
        </dt>
        <dd class="col-sm-10">
            @{

                @Html.DisplayFor(name => Model.Producer.Name);
            }
        </dd>
    </dl>
    <input type="submit" value="Usuń" class="btn btn-danger" />
</div>
}
